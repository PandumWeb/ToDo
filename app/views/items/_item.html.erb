<div class="row clearfix">
	<% if item.completed? %>
		<div class="complete">
			<%= link_to "Mark as complete", complete_list_item_path(@list, item.id), method: :patch %>
		</div>
		<div class="todo_item">
			<p style="color:grey;"><strike><%= item.content %></strike></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", list_item_path(@list, item.id), method: :delete, data: {confirm: "Are you sur ?"} %>
		</div>
		<% else %>
		<div class="complete">
			<%= link_to "Mark as complete", complete_list_item_path(@list, item.id), method: :patch %>
		</div>
		<div class="todo_item">
			<p><%= item.content %></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", list_item_path(@list, item.id), method: :delete, data: {confirm: "Are you sur ?"} %>
		</div>
	<% end %>
</div>