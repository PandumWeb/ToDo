<p id="notice"><%= notice %></p>

<h2 class="todo_list_title"><%= @list.title %></h2>
<p class="todo_list_sub_title"><%= @list.description %></p>

<div id="todo_items_wrapper">
	<%= render @list.items %>
	<div id="form">
		<%= render "items/form" %>
	</div>
</div>

<div class="links">
	<%= link_to 'Edit', edit_list_path(@list) %> |
	<%= link_to 'Delete', list_path(@list), method: :delete, data: {confirm: "Are you sur ?"} %>|
	<%= link_to 'Back', lists_path %>
</div>

